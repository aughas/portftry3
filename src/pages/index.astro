/* Fan images: initially overlap with the main image */
.yaki-fan {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%; /* Same width as the main image */
  transition: transform 0.5s ease, opacity 0.5s ease;
  opacity: 0; /* Hidden initially */
  transform-origin: left center; /* Make the images fan out from the left */
  z-index: -1; /* Keeps them behind the main image */
}

/* When hovering over the container, fan out the images */
.yaki-container:hover .yaki-fan {
  opacity: 1;
}

/* Specific fan-out positions for each image */
.yaki-container:hover .yaki-fan:nth-child(2) {
  transform: translateX(100px);
  z-index: 5;
}

.yaki-container:hover .yaki-fan:nth-child(3) {
